getDockerArch() {
        local arch
        arch=$(uname -m)
        if [[ "${arch}" = "x86_64" ]]; then
                echo "amd64"
        elif [[ "${arch}" = "armv7l" ]]; then
                echo "arm"
        else
                echo "UNKNOWN-ARCH-${arch}"
        fi
}

getDockerDownloadArch() {
        local arch
        arch=$(uname -m)
        if [[ "${arch}" = "x86_64" ]]; then
                echo "x86_64"
        elif [[ "${arch}" = "armv7l" ]]; then
                echo "armhf"
        else
                echo "UNKNOWN-ARCH-${arch}"
        fi
}

dockerSquash() {
	if [[ "$#" -ne 1 ]]; then
		echo "FATAL: missing argument to dockerSquash" >&2
	fi
	docker run --rm -v /var/run/docker.sock:/var/run/docker.sock hkjn/docker-squash -t ${1} ${1}
}

getVersion() {
	cat VERSION
}
